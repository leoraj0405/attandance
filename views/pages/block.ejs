<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head') %>

    <style>
      .high {
        height: 2cm;
      }

      .no-border {
        border: none;
        outline: none;
        /* Remove the outline that appears when focused */
        padding: 10px;
        font-size: 16px;
        background-color: rgb(234, 232, 232);
        /* Optional, for better visibility */
      }
    </style>
</head>

<body>
  <%- include('../partials/header') %>
    <!-- <nav class="navbar navbar-light bg-light">
    <a class="navbar-brand" href="#">Add Block</a>
  </nav> -->
    <div id="dateBlock" class="w-100 p-3 d-flex flex-row-reverse">
       <div>
        <input type="date" id="todayDate" class="no-border"> 
      </div> 

    </div>
    <div class="d-flex justify-content-center">
      <div class="w-75 p-3">
        <label for="blockId"><b>Blocks</b></label>
        <table class="table table-borderless">
          <tbody>
            <tr>
              <% for(var i=0; i < data.length;i++) { %>
                <td>
                  <a class="col btn btn-light card high w-100" href="/sh/attendance/room?block=<%=data[i].id %>" id="blockId">
                    <%=data[i].name %>
                  </a>
                </td>
                <% if(i==4 || i==9 || i==13 || i==17 || i==20) { %>
            </tr>
            <tr>
              <% } %>
                <% } %>
            </tr>

          </tbody>
        </table>
      </div>
    </div>
    <%- include('../partials/footer') %>
      <script>
        const today = new Date();
        const date = today.toISOString().split('T')[0];
        document.getElementById('todayDate').value = date;


      </script>
</body>

</html>